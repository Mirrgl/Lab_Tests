  - head: DFNode*
  - tail: DFNode*
  - length: size_t
  --
  - validateIndex(index: int, allowEnd: bool = false): void
  - getNodeAt(index: int): DFNode*
  --
  + DoubleList()
  + DoubleList(list: initializer_list<string>)
  + ~DoubleList()
  + addAfter(key: const string&, index: int): void
  + addBefore(key: const string&, index: int): void
  + addHead(key: const string&): void
  + addTail(key: const string&): void
  + deleteAt(index: int): void
  + deleteHead(): void
  + deleteTail(): void
  + deleteByValue(key: const string&): void
  + getElement(index: int): string
  + popElement(index: int): string
  + findByValue(key: const string&): DFNode*
