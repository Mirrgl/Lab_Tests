struct DFNode {
  + key: string
  + next: DFNode* = nullptr
  + prev: DFNode* = nullptr
}

DoubleList "1" *-- "*" DFNode : contains
DFNode "0..1" -right-o "1" DFNode : next
DFNode "0..1" -left-o "1" DFNode : prev

