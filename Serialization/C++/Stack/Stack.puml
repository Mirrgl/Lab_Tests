@startuml Stack

class Stack {
  - head: SNode*
  - size: int
  - MAX_SIZE: int = 10
  --
  - createSNode(key: string): SNode*
  --
  + Stack()
  + Stack(list: initializer_list<string>)
  --
  + push(data: string): void
  + pop(): string
  + isEmpty(): bool
  + getSize(): int
  + writeBinary(filename: const string&): void
  + readBinary(filename: const string&): void
  + writeText(filename: const string&): void
  + readText(filename: const string&): void
  + print(): void
}

struct SNode {
  + key: string
  + next: SNode*
}

Stack "1" *-- "*" SNode : contains
SNode "0..1" --o "0..1" SNode : next

